<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!--  告诉jsp解析引擎，你连同我的html一块帮我解析按照这个字符集-->
    <jsp-config>
        <jsp-property-group>
            <description>htmlConfiguration</description>  <!--描述信息-->
            <display-name>htmlinclude</display-name>  <!--给这个组起个名字-->
            <url-pattern>*.html</url-pattern>
            <el-ignored>false</el-ignored>  <!--是否忽略EL表达式 true为忽略，false为不忽略-->
            <page-encoding>UTF-8</page-encoding>
            <scripting-invalid>false</scripting-invalid>
        </jsp-property-group>
        <jsp-property-group>
            <description>jspConfiguration</description>  <!--描述信息-->
            <display-name>jspinclude</display-name>  <!--给这个组起个名字-->
            <url-pattern>*.html</url-pattern>
            <el-ignored>false</el-ignored>  <!--是否忽略EL表达式 true为忽略，false为不忽略-->
            <page-encoding>UTF-8</page-encoding>
            <scripting-invalid>false</scripting-invalid>
        </jsp-property-group>
    </jsp-config>
</web-app>