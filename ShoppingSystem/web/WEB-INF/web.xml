        <servlet-name>JudgeChangeController</servlet-name>
        <url-pattern>/judgeChangeController</url-pattern>
    </servlet-mapping>

    <!--结账-->
    <servlet>
        <servlet-name>CheckoutPageController</servlet-name>
        <servlet-class>controller.CheckoutPageController</servlet-class>
    </servlet>
