    </servlet-mapping>


    <servlet>
        <servlet-name>SelectCommodityController</servlet-name>
        <servlet-class>controller.SelectCommodityController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SelectCommodityController</servlet-name>
        <url-pattern>/selectCommodityController</url-pattern>
    </servlet-mapping>

    <!--找到判断继续购物还是结算清单的类-->
    <servlet>
        <servlet-name>JudgeChangeController</servlet-name>
        <servlet-class>controller.JudgeChangeController</servlet-class>
    </servlet>
