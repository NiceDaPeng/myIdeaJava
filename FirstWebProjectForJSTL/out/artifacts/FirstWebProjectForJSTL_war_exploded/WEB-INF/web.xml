<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>controller.LoginController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/loginController</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UploadController</servlet-name>
        <servlet-class>controller.UploadController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UploadController</servlet-name>
        <url-pattern>/uploadController</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>reDownLoadController</servlet-name>
        <servlet-class>controller.ReDownLoadController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>reDownLoadController</servlet-name>
        <url-pattern>/reDownLoadController</url-pattern>
    </servlet-mapping>
</web-app>